<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sio.velikojava.GestionStatsController">
   <children>
      <!-- En-tête -->
      <VBox prefWidth="600.0" alignment="CENTER" style="-fx-background-color: darkblue;">
         <children>
            <Label text="Gestion Statistiques" textFill="WHITE">
               <font>
                  <Font size="40.0" />
               </font>
            </Label>
         </children>
      </VBox>

      <!-- Conteneur des boutons -->
      <VBox layoutX="100.0" layoutY="120.0" spacing="20.0">
         <children>
            <Button fx:id="btnStatReservation" text="Statistiques Réservations" onAction="#menuStatClicked"
                    prefHeight="60.0" prefWidth="400.0"
                    style="-fx-background-color: #0078D7; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10;"/>

            <Button fx:id="btnStatStation" text="Statistiques Stations" onAction="#menuStatClicked"
                    prefHeight="60.0" prefWidth="400.0"
                    style="-fx-background-color: #28A745; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10;"/>

            <Button fx:id="btnStatUser" text="Statistiques Utilisateurs" onAction="#menuStatClicked"
                    prefHeight="60.0" prefWidth="400.0"
                    style="-fx-background-color: #DC3545; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10;"/>
         </children>
      </VBox>
   </children>
</AnchorPane>